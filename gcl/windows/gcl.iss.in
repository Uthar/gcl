[Setup]
AppName=GNU Common Lisp
AppVerName=GNU Common Lisp @VERSION@
AppPublisher=The GNU Common Lisp Development Team
AppPublisherURL=http://savannah.gnu.org/projects/gcl/
AppSupportURL=http://savannah.gnu.org/projects/gcl/
AppUpdatesURL=http://savannah.gnu.org/projects/gcl/
AppVersion=@VERSION@
OutputBaseFilename=gcl-@VERSION@
DefaultDirName={pf}\GCL-@VERSION@
DefaultGroupName=GCL-@VERSION@
AllowNoIcons=yes
; AlwaysCreateUninstallIcon=yes
LicenseFile=@prefix@\COPYING.LIB-2.0
InfoBeforeFile=@prefix@\readme-bin.mingw
Uninstallable=yes
UninstallFilesDir={app}\uninst
; uncomment the following line if you want your installation to run on NT 3.51 too.
; MinVersion=4,3.51

[Tasks]
Name: "desktopicon"; Description: "Create a &desktop icon"; GroupDescription: "Additional icons:"; MinVersion: 4,4

[Files]
; Source: "@prefix@\bin\gclm.bat"; DestDir: "{app}\bin\"; CopyMode: alwaysoverwrite
Source: "@prefix@\*.*"; DestDir: "{app}\";  Flags: recursesubdirs

[Icons]
Name: "{group}\GNU Common Lisp @VERSION@"; Filename: "{app}\bin\gclm.bat"; IconFilename: "{app}\bin\gcl.ico"
; Name: "{group}\Introduction"; Filename: "{app}\share\maxima\@VERSION@\doc\html\intromax.html"; WorkingDir: "{app}\share\maxima\@VERSION@"
; Name: "{group}\Reference Manual"; Filename: "{app}\share\maxima\@VERSION@\doc\html\maxima_toc.html"; WorkingDir: "{app}\share\maxima\@VERSION@"
Name: "{userdesktop}\GNU Common Lisp"; Filename: "{app}\bin\gclm.bat"; MinVersion: 4,4; Tasks: desktopicon; IconFilename: "{app}\bin\gcl.ico"

[Run]
Filename: "{app}\bin\gclm.bat"; Description: "Launch GNU Common Lisp"; Flags: postinstall skipifsilent

